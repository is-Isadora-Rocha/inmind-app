<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-10">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Título" %>
  </div>

   <div class="col-sm-10">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Descrição" %>
  </div>

  <!-- Campo de data e hora oculto para a data de criação automática -->
  <%= form.hidden_field :created_at, value: Time.current %>

  <%= form.submit "Publicar Post", class: "btn btn-custom" %>
  
  </div>
<% end %>
